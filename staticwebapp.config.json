    "mimeTypes": {
        ".config": "application/xml",
        ".schema": "application/schema+json"
    },
    "trailingSlash": "always",
    "globalHeaders": {
        "X-Author": "David G. Moore, Jr. <david@dgmjr.io>",
        "X-License": "MIT",
        "X-Repository": "https://github.com/jsonschema-xyz/jsonschema.xyz",
